+using Gdk;
+using Gtk;
+
+/*
+ * Base16 PhD
+ * Original Author: Hennig Hasemann (http://leetless.de/vim.html)
+ */
+public class ThemePhd: Theme {
+
+  /* Create the theme colors */
+  public ThemePhd() {
+
+    name = _( "Phd" );
+
+    /* Generate the non-link colors */
+    background         = get_color( "#061229" );
+    foreground         = get_color( "b8bbc2" );
+    root_background    = get_color( "#1b4fb1" ); /* 40% more than bg */ /* "#d4d4d4" ); */
+    root_foreground    = get_color( "White" );
+    nodesel_background = get_color( "#64baff" );
+    nodesel_foreground = get_color( "Black" );
+    textsel_background = get_color( "#0d52bf" );
+    textsel_foreground = get_color( "White" );
+    text_cursor        = get_color( "White" );
+    attachable_color   = get_color( "#9bdb4d" );
+    /* connection_color   = get_color( "#404040" ); */
+    /* connection_color   = get_color( "#808080" ); */
+    connection_color   = get_color( "#BBFFFF" );
+    prefer_dark        = true;
+
+    /* Generate the link colors */
+    /* Maybe from a brighter scheme? */
+    add_link_color( get_color( "#d07346" ) );
+    add_link_color( get_color( "#99bf52" ) );
+    add_link_color( get_color( "#fbd461" ) );
+    add_link_color( get_color( "#5299bf" ) );
+    add_link_color( get_color( "#9989cc" ) );
+    add_link_color( get_color( "#72b9bf" ) );
+    add_link_color( get_color( "#715344" ) );
+    add_link_color( get_color( "#bbbbbb" ) );
+
+  }
+
+}
